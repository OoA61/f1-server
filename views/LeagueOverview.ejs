<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../assets/css/style.css">
    <title>My Leagues</title>
    <script>
      function getUserBets(user_id){
        window.location.href = `https://racegambit.com/UserInfo/${user_id}`;
      }
    </script>
</head>
<body>
  <div class="header-box">
    <div class="left-header">
      <a class="header-logo" href="/">F1 Bets</a>
    </div>
    <% if (!isAuth) { %> 
        <div class="right-header">
          <form action="/login">
            <button class="sign-in header-btn" type="submit">SIGN IN</button>
          </form> 
          <form action="/registration">
            <button class="register header-btn" type="submit">REGISTER</button>
          </form>
        </div>
      <% } %>
      <% if (isAuth) { %> 
        <div class="right-header">
          <form action="/account" method="GET">
            <button class="sign-in header-btn" type="submit">ACCOUNT</button>
          </form>
          <form action="/logout" method="POST">
            <button class="register header-btn" type="submit">SIGN OUT</button>
          </form> 
        </div>
      <% } %> 
  </div>
  <div class="tabs-bar">
    <div class="tabs">
      <a class='tab-head' id='popular' href="/bets/Placement"> PLACEMENT </a> 
      <a class='tab-head' id='trending' href="/bets/Qualification" > QUALIFICATION </a>
      <a class='tab-head' id='new' href="/bets/5050"> YES/NO </a>
      <a class="tab-head" id="pitstop" href="/bets/Pitstops">PIT STOPS</a>
      <a class="tab-head" id='create' href="/leagues"> MY LEAGUE </a>
    </div>
  </div>
    <div>
        <h1 style="text-align: center;"><%- leagueName %></h1>
    </div>
    <div>
        <table class="center league-user-table">
            <tr class="table-head">
                <th style="width: 5%;">Placement</th>
                <th style="width: 20%;">First Name</th>
                <th style="width: 20%;">Last Name</th>
                <th style="width: 30%;">Title</th>
                <th>Balance</th>
            </tr>
            <% if (name.length > 0) { %>
                <% for (let i = 0; i < name.length; i++) { %>
                    <tr class="table-row" onclick="getUserBets(`<%- name[i].user_id %>`);">
                        <td><%- i + 1 %> </td>
                        <td><%- name[i].FirstName %> </td>
                        <td><%- name[i].LastName %> </td>
                        <td><%- name[i].Job %> </td>
                        <td>$<%- name[i].Balance %> </td>
                    </tr>
                <% } %> 
            <% } %> 
        </table>
        
    </div>
</body>
</html>